@import url(https://fonts.googleapis.com/css?family=Raleway:400,700&subset=latin,latin-ext);

@font-family{


	font-family: 'Stalinist One';
	src: url(fonts/StalinistOne-Regular.ttf);
}

h3.header{
	font-family: Stalinist One;
	font-size: 36px;
	color: #9ac4d9;
	background-color: #3d3d3d;

}

.header{
	padding-left: 17.5%;
	}

*{
	margin: 0;
    padding: 0;
}

body{
	background-image: url("/img/bg.png");
	background-repeat: repeat;
}
@font-family{

	font-family: 'Segoe UI';
	src: url(fonts/SegoeUIRegular.ttf);
}

.logo{
	position: absolute;
	top: -55px;
	right: 15px;
	overflow: initial;
}


.top-menu{
	position: absolute;
	font-family: 'Raleway', sans-serif;
	padding-left: 17.5%;
	padding-right: 50.9%;
	display: block;
	height: 31px;
	background-color: #3d3d3d;
}

.top-menu > ul {
	padding: 0;
	margin: 0;
	font-size: 0;
	height: 30px;
}

.top-menu > ul > li{
	display: inline-block;
	list-style: none;
	font-size: 16px;
	height: 30px;

}

.top-menu > ul > li > a{
	color: #abdcf4;
	text-decoration: none;
	padding: 0 15px;
	height: 30px;
	display: inline-block;

}

.info{
	position: absolute;
	top: -50px;
	right: 190px;
	width: 12.5%;
	height 12.5%;
}

.en{
	position: absolute;
	top: 0px;
	right: 650px;
}

.ru{
	position: absolute;
	top: 0px;
	right: 620px;
}

#slider{
	height: 100%;
	width: 100%;
	overflow: hidden;
	top:30px;
	padding:75px;
}
 
#content-wrapper{
	background-image: url(img/bg.png);
}

#materials{
	padding: 25px 75px;
	font-family: 'Segoe UI';

}

